<?php
class User extends CI_Controller
{
    $userID = '';
    $email = '';
    $password = '';
    
    function index()
  	{
        
    }

    function __constructor($email,$password)
    {
        $this->is_name_taken($email);
        $this->email = $email;
        $this->password = $password;
    }
        
  /*
    Insert - Lägger till användaren i databasens tabell users
    Email = Username, kan vara förvirrande. Kolla upp det!
    */
  function insert($username,$password,$passwordconfirm)
  {
    $user = new User($this->input->post('Email'), $this->input->post('password')); 
    $user->insert_to_db();
    redirect('login');
   }
}

?>